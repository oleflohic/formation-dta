<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	
	
	<filter>
		<filter-name>UtilisateurFilter</filter-name>
		<filter-class>fr.pizzeria.admin.web.UtilisateurFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>UtilisateurFilter</filter-name>
		<url-pattern>/pizzas/*</url-pattern>
	</filter-mapping>
	
	
	<servlet>
		<servlet-name>PizzaServletWebApi</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.PizzaServletWebApi</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>PizzaServletWeb</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.PizzaServletWeb</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListerPizzaController</servlet-name>
		<display-name>ListerPizzaController</display-name>
		<description></description>
		<servlet-class>fr.pizzeria.admin.web.ListerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditerPizzaController</servlet-name>
		<display-name>EditerPizzaController</display-name>
		<description></description>
		<servlet-class>fr.pizzeria.admin.web.EditerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<display-name>LoginController</display-name>
		<description></description>
		<servlet-class>fr.pizzeria.admin.web.LoginController</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>PizzaServletWebApi</servlet-name>
		<url-pattern>/api/servlet/pizzas</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>PizzaServletWeb</servlet-name>
		<url-pattern>/servlet/pizzas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListerPizzaController</servlet-name>
		<url-pattern>/pizzas/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditerPizzaController</servlet-name>
		<url-pattern>/pizzas/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
</web-app>